    <%= form.number_field :age, id: :character_age %>
  </div>

  <div class="field">
    <%= form.label :sex %>
    <%= form.number_field :sex, id: :character_sex %>
  </div>

  <div class="field">
    <%= form.label :race %>
    <%= form.text_area :race, id: :character_race %>
  </div>

  <div class="field">
    <%= form.label :memo %>
    <%= form.text_area :memo, id: :character_memo %>
  </div>
